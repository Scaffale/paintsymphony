<h1>Listing Musics</h1>
<br>
<%= link_to 'New Music', new_music_path, class: 'btn btn-outline-info' %>
<hr>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Sound</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @musics.each do |music| %>
			<tr>
				<td><%= music.name %></td>
				<td><%= audio_tag music.sound, controls:true, style:"width:300px;", preload:"metadata", type: "audio/#{music.sound.extension}" %></td>
				<td>
					<div class="btn-group" role="group" aria-label="Music options">
						<%= link_to 'Show', music, class: "btn btn-secondary btn-outline-success" %>
						<%= link_to 'Edit', edit_music_path(music), class: "btn btn-secondary btn-outline-warning" %>
						<%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary btn-outline-danger" %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

