<div class="conatiner">
	<div class="row">
		<div class="col-lg-5">
			<div class="btn-group" role="group" aria-label="Setting options">
				<%= link_to 'Edit', edit_session_path(@session), class: "btn btn-secondary btn-outline-success" %>
				<%= link_to 'Back', sessions_path, class: "btn btn-secondary btn-outline-warning" %>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-lg-4">
			<h3>
				<%= @session.name %>
			</h3>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Picture / Music</th>
				<th>Opinions</th>
			</tr>
		</thead>
		<tbody>
			<% @session.phases.all.each do |phase| %>
				<tr>
					<td>
						<% unless phase.picture %>
							Music name = <strong><%= phase.music.name %></strong>
						<% else %>
							Picture name = <strong><%= phase.picture.name %></strong>
						<% end %>
					</td>
					<td>
						<button class="btn btn-outline-info btn-sm" type="button" data-toggle="collapse" data-target="#collapse<%= phase.id %>"" aria-expanded="false" aria-controls="collapse<%= phase.id %>"">
							Show all opinions
						</button>
						<div class="collapse" id="collapse<%= phase.id %>">
							<div class="card">
								<ul class="list-group list-group-flush">
									<% phase.opinions.all.each do |opinion| %>
										<li class="list-group-item">
											<%= opinion.word.left %>
											<% unless opinion.mark %>
												<strong>??</strong>
											<% else %>
												<strong><%= opinion.mark %></strong>
											<% end %>
											<%= opinion.word.right %>
										</li>
									<% end %>
								</ul>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>