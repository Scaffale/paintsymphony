<h1>Listing Pictures</h1>
<br>
<%= link_to 'New Picture', new_picture_path, class: 'btn btn-outline-info' %>
<hr>

<div class="container">
  <div class="row">
    <% @pictures.each do |picture| %>
    <div class="col-lg-3">
      <div class="card">
        <%= image_tag picture.image.thumb250, class:"card-img-top" %>
        <div class="card-block">
          <h5 class="card-title">
            <%= picture.name %>
          </h5>
          <div class="btn-group" role="group" aria-label="Image options">
            <%= link_to 'Show', picture, class: "btn btn-secondary btn-outline-success" %>
            <%= link_to 'Edit', edit_picture_path(picture), class: "btn btn-secondary btn-outline-warning" %>
          </div>
        </div>
        <div class="card-block">
          <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>